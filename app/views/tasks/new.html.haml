.container
  %header
    .row
      .col-sm-6.head_menu
        %h1 トレ-ニングメニューの追加
    = form_with(model: @task, local: true) do |f|
      .row
        .form-group.task_form 
          = render 'shared/error_task_message'
          = f.label "メニュー", class:"task_label"
          = f.text_field :content, class: 'form-control margin-bottom', placeholder: "メニューを入力しよう", required: ""  
          = f.label "内容", class:"task_label"
          = f.text_area :description, class: 'form-control margin-bottom description_from', placeholder: "内容を入力しよう", required: ""
        .form-group
        = f.submit '追加', class: 'col-sm-2 form__submit'
        .btn.col-sm-2.botan
          = link_to "戻る", tasks_path