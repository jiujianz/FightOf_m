- provide(:title, 'Sign up')
%h1.text-center Sign up
.row
  .col-md-6.col-md-offset-3
    = form_for(@user, url: signup_path) do |f|
      = render 'shared/error_messages'
      = f.label :名前, class: "session_label"
      = f.text_field :name, class: 'form-control'
      = f.label :email, class: "session_label"
      = f.email_field :email, class: 'form-control'
      = f.label :password, class: "session_label"
      = f.password_field :password, class: 'form-control'
      = f.label :password_confirmation, class: "session_label"
      = f.password_field :password_confirmation, class: 'form-control'
      = f.submit "Create my account", class: "btn btn-primary"
      = link_to "ログイン", login_path, class:"btn btn-primary signup_btn"