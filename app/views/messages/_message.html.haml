.message.col-xs-12
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
    = video_tag message.video.url, autoplay: true, muted: true, controls: true, preload: true, class: 'lower-message__video' if message.video.present?
